<?xml version="1.0" encoding="UTF-8"?> 
<Configuration> 
  <Appenders> 
    <Console name="STDOUT" target="SYSTEM_OUT"> 
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/> 
    </Console> 
  </Appenders> 
  <Loggers> 
    <Logger name="com.ct.goober" level="info"/>
    <Logger name="com.ct.goober.CodeName" level="info"/>
    <Logger name="com.ct.goober.Dictionary" level="debug"/>
	<Logger name="com.ct.goober.NameCheck" level="debug"/>
	<Logger name="com.ct.goober.Goober" level="debug"/>
    <Logger name="com.ct.goober.NameToken" level="info"/>
	<Logger name="com.ct.goober.NameTokenizer" level="info"/>
    <Logger name="test.com.ct.goober.TestDictionary" level="debug"/>
    <Logger name="test.com.ct.goober.TestNameTokenizer" level="info"/>  
    <Logger name="test.com.ct.goober.TestTokenizer" level="info"/>

    <Root level="trace"> 
      <AppenderRef ref="STDOUT"/> 
    </Root> 
  </Loggers> 
</Configuration>